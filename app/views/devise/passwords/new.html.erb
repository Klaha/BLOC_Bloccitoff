<div class="row">
  <div class="col s12 center-align">
    <h2 class="hide-on-small-only">Forgot your Password?</h2>
    <h3 class="hide-on-med-and-up">Forgot your Password?</h3>
    <div class="row">
      <div class="col s12 red-text">
        <%= devise_error_messages! %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'col s12 m10 offset-m1 l10 offset-l1' }) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'validate' %>
      </div>
    </div>
  
    <div class="row">
      <div class="actions col s12 center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Reset Password</button>
        <br>
        <%= render "devise/shared/links" %>
      </div>      
    </div>
    
  <% end %>
</div>

