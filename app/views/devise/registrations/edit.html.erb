<div class="row">
  <div class="col s12 center-align">
    <h2 class="hide-on-small-only">Edit <%= resource_name.to_s.humanize %></h2>
    <h3 class="hide-on-med-and-up">Edit <%= resource_name.to_s.humanize %></h3>
    <div class="row">
      <div class="col s6 offset-s3 red-text">
        <%= devise_error_messages! %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, class: 'col s12 m10 offset-m1 l10 offset-l1' }) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password, "New Password" %> 
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password_confirmation, "New Password Confirmation" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :current_password, "Current Password (To Confirm Changes!)" %>
        <%= f.password_field :current_password, autocomplete: "off", autofocus: true %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="actions col s12 center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Update
          <i class="mdi-content-send right"></i>
        </button>
      </div>
    </div>
    
  <% end %>
  
  <div class="row">
    <div class="col s12 center-align">
      <h4 class="red-text">Cancel my account :(</h4>
      <br>
      <%= link_to registration_path(resource_name), method: :delete, class: 'waves-effect waves-light btn red', data: { confirm: "Are you sure?" } do %>
        Cancel Account
        <i class="mdi-action-delete"></i>
      <% end %>
    </div>
  </div>

</div>

