<div class="row">
  <div class="col s6 offset-s3 red-text">
    <%= devise_error_messages! %>
  </div>
</div>
<div class="row">
  <div class="col s12 center-align">
    <h2>Log In</h2>
  </div>
</div>

<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'col s6 offset-s3'}) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'validate' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <p>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </p>
    <% end -%>
    <br>
    <div class="row">
      <div class="actions col s6 offset-s3 center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Log In!
          <i class="mdi-content-send right"></i>
        </button>
        <br>
        <p class="center-align"><%= render "devise/shared/links" %></p>  
      </div>
    </div>
  
  <% end %>
</div>
