<div class="row">
  <%= form_for [user, item], :html => {class: 'col s6 offset-s3'}, remote: true do |f| %>
  <h4 class="center-align">New item:</h4>
    <div class="input-field">
      <%= f.label :name, "Item name" %>
      <%= f.text_field :name %>
    </div>
    <br>
    <div class="actions center-align">
      <button class="btn waves-effect waves-light" type="submit" name="action">Save
        <i class="mdi-action-thumb-up right"></i>
      </button>
    </div>
  <% end %>
</div>
