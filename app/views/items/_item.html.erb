<li id="item-<%= item.id %>">
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="col s9 m10 l10">
          <span><%= item.name %></span>
          <br>
          <% if item.days_left >= 5 %>
            <strong class="light-green-text"><%= item.days_left_text %></strong>
          <% elsif item.days_left >= 3 %>
            <strong class="amber-text"><%= item.days_left_text %></strong>
          <% else %>
            <strong class="red-text"><%= item.days_left_text %></strong>
          <% end %>
        </div>
        <div class="col s2 m1 l1">
          <a class="done btn-floating btn-small waves-effect waves-light green"><i class="mdi-action-done"></i></a>
        </div>
        <div class="del col s1 m1 l1">
          <%= link_to user_item_path(@user, item), class: 'done btn-floating btn-small waves-effect waves-light red', method: :delete, remote: true do %>
            <i class="mdi-action-delete"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</li>


